---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

// Get all published poems sorted by date
const allPoems = (await getCollection('poems', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get the date from the URL parameter
const { date } = Astro.params;

// Find the poem matching this date
const poem = allPoems.find(p => {
  const poemDate = p.data.date.toISOString().split('T')[0]; // YYYY-MM-DD
  return poemDate === date;
});

// If no poem found, return 404
if (!poem) {
  return Astro.redirect('/404');
}

const { Content } = await poem.render();

// Find current poem index for navigation
const currentIndex = allPoems.findIndex(p => p === poem);

// Navigation info (swapped for intuitive direction)
// Right arrow = newer (lower index), Left arrow = older (higher index)
const hasNewer = currentIndex > 0;
const hasOlder = currentIndex < allPoems.length - 1;
const newerPoem = hasNewer ? allPoems[currentIndex - 1] : null;
const olderPoem = hasOlder ? allPoems[currentIndex + 1] : null;

// Helper to format date as YYYY-MM-DD
const formatDate = (date: Date) => date.toISOString().split('T')[0];
---

<BaseLayout 
  title={`${poem.data.title} - Godot`}
  description={`A poem by Godot - ${poem.data.mood || 'daily poem'}`}
>
  <Header />
  
  <main class="flex-1 pt-[var(--header-height)] poem-page">
    <section class="min-h-[calc(100vh-var(--header-height))] flex flex-col items-center justify-center py-12 px-4">
      <!-- Date (above chalkboard) -->
      <time class="poem-date-top" datetime={poem.data.date.toISOString()}>
        {poem.data.date.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </time>
      
      <!-- Chalkboard -->
      <article class="chalkboard">
        <div class="chalkboard-content">
          <h1 class="poem-title">{poem.data.title}</h1>
          <div class="poem-body">
            <Content />
          </div>
        </div>
        
        <!-- Navigation Arrows -->
        <nav class="poem-navigation">
          {hasOlder && olderPoem && (
            <a 
              href={`/poem/${formatDate(olderPoem.data.date)}`} 
              class="nav-arrow nav-prev"
              aria-label="Older poem"
              title="Older poem (←)"
            >
              ‹
            </a>
          )}
          {hasNewer && newerPoem && (
            <a 
              href={`/poem/${formatDate(newerPoem.data.date)}`} 
              class="nav-arrow nav-next"
              aria-label="Newer poem"
              title="Newer poem (→)"
            >
              ›
            </a>
          )}
        </nav>
      </article>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  /* Load custom font - Whatever it takes */
  @font-face {
    font-family: 'Whatever it takes';
    src: url('/fonts/whatever it takes.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .poem-page {
    background: #1a1a1a;
  }

  /* Date above chalkboard */
  .poem-date-top {
    display: block;
    font-family: 'Georgia', serif;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-style: italic;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  /* Chalkboard */
  .chalkboard {
    position: relative;
    width: 100%;
    max-width: 800px;
    aspect-ratio: 2/3;
    background-image: url('/images/poems/chalk_bg.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    box-shadow: 
      0 8px 16px rgba(0, 0, 0, 0.4),
      0 16px 32px rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 2.5rem;
  }

  .chalkboard-content {
    text-align: center;
    max-width: 90%;
    width: 100%;
  }

  .poem-title {
    font-family: 'Whatever it takes', system-ui, sans-serif;
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 2.5rem 0;
    color: #f5f5f0;
    letter-spacing: 0.02em;
    line-height: 1.3;
    opacity: 0.88;
  }

  .poem-body {
    font-family: 'Whatever it takes', system-ui, sans-serif;
    font-size: 1.75rem;
    line-height: 1.9;
    color: #f5f5f0;
    opacity: 0.88;
  }

  /* Remove default heading from markdown */
  .poem-body :global(h2) {
    display: None;
  }

  .poem-body :global(p) {
    margin: 1.5rem 0;
    white-space: pre-line;
  }

  /* Code blocks (indented poetry) - render directly on chalkboard */
  .poem-body :global(pre) {
    font-family: 'Whatever it takes', system-ui, sans-serif;
    background: transparent !important;
    border: none !important;
    padding: 0;
    margin: 1.5rem 0;
    white-space: pre-line;
    text-align: center;
    font-size: 1.75rem;
    line-height: 1.9;
    color: #f5f5f0;
  }

  .poem-body :global(code) {
    font-family: 'Whatever it takes', system-ui, sans-serif !important;
    background: transparent !important;
    border: none !important;
    padding: 0 !important;
    font-size: inherit !important;
    color: #f5f5f0 !important;
  }

  /* Navigation */
  .poem-navigation {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    pointer-events: none;
  }

  .nav-arrow {
    position: absolute;
    pointer-events: all;
    font-size: 3.5rem;
    color: #f5f5f0;
    text-decoration: none;
    padding: 1.5rem;
    transition: all 0.3s ease;
    font-family: 'Georgia', serif;
    line-height: 1;
    opacity: 0.6;
  }

  .nav-arrow:hover {
    opacity: 1;
    transform: scale(1.15);
  }

  .nav-prev {
    left: -3.5rem;
  }

  .nav-next {
    right: -3.5rem;
  }

  /* Mobile responsiveness */
  @media (max-width: 1024px) {
    .nav-prev {
      left: -2rem;
    }

    .nav-next {
      right: -2rem;
    }
  }

  @media (max-width: 768px) {
    .chalkboard {
      max-width: 95%;
      padding: 2.5rem 2rem;
    }

    .chalkboard-content {
      max-width: 95%;
    }

    .poem-title {
      font-size: 1.75rem;
      margin-bottom: 1.75rem;
    }

    .poem-body {
      font-size: 1rem;
      line-height: 1.6;
    }

    .poem-body :global(pre) {
      font-size: 1rem;
      line-height: 1.6;
    }

    .poem-body :global(p) {
      margin: 1.25rem 0;
    }

    .nav-arrow {
      font-size: 2.5rem;
      padding: 1rem;
    }

    .nav-prev {
      left: -0.5rem;
    }

    .nav-next {
      right: -0.5rem;
    }
  }

  @media (max-width: 480px) {
    .poem-date-top {
      font-size: 0.8rem;
      margin-bottom: 1rem;
    }

    .chalkboard {
      padding: 2rem 1.5rem;
    }

    .poem-title {
      font-size: 1.5rem;
    }

    .poem-body {
      font-size: 0.9rem;
      line-height: 1.55;
    }

    .poem-body :global(pre) {
      font-size: 0.9rem;
      line-height: 1.55;
    }

    .poem-body :global(p) {
      margin: 1rem 0;
    }
  }
</style>

<script>
  // Keyboard navigation
  // Left = older, Right = newer (intuitive direction)
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      const olderLink = document.querySelector('.nav-prev') as HTMLAnchorElement;
      if (olderLink) {
        olderLink.click();
      }
    } else if (e.key === 'ArrowRight') {
      const newerLink = document.querySelector('.nav-next') as HTMLAnchorElement;
      if (newerLink) {
        newerLink.click();
      }
    }
  });
</script>
