---
const pathname = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-background)]/80 backdrop-blur-lg border-b border-[var(--color-surface)]">
  <nav class="container" style="height: var(--header-height);">
    <div class="flex items-center justify-between h-full">
      <!-- Logo -->
      <a 
        href="/" 
        class="hover:opacity-80 transition-opacity duration-[var(--transition-base)] flex items-center"
      >
        <img 
          src="/images/godot_logo.svg" 
          alt="Godot" 
          class="h-8 w-auto"
        />
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a 
          href="/" 
          class:list={[
            "text-sm font-medium transition-colors duration-[var(--transition-base)]",
            pathname === "/" 
              ? "text-[var(--color-primary)]" 
              : "text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
          ]}
        >
          Home
        </a>
        <a 
          href="/cv/full" 
          class:list={[
            "text-sm font-medium transition-colors duration-[var(--transition-base)]",
            pathname.startsWith("/cv") 
              ? "text-[var(--color-primary)]" 
              : "text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
          ]}
        >
          CV
        </a>
        <a 
          href="/blog" 
          class:list={[
            "text-sm font-medium transition-colors duration-[var(--transition-base)]",
            pathname.startsWith("/blog") 
              ? "text-[var(--color-primary)]" 
              : "text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
          ]}
        >
          Blog
        </a>
        <a 
          href="/poem"
          class="px-4 py-2 text-sm font-bold uppercase text-[var(--color-primary)] border-2 border-[var(--color-primary)] hover:bg-[var(--color-primary)] hover:text-white transition-all duration-[var(--transition-base)]"
        >
          Daily Poem
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 text-[var(--color-text)] hover:text-[var(--color-primary)] transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div 
      id="mobile-menu" 
      class="md:hidden hidden absolute top-full left-0 right-0 bg-[var(--color-surface)] border-b border-[var(--color-surface-elevated)] shadow-xl"
    >
      <div class="container py-4 flex flex-col gap-4">
        <a 
          href="/" 
          class="text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
        >
          Home
        </a>
        <a 
          href="/cv/full" 
          class="text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
        >
          CV
        </a>
        <a 
          href="/blog" 
          class="text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
        >
          Blog
        </a>
        <a 
          href="/poem"
          class="px-4 py-2 text-sm font-bold uppercase text-center text-[var(--color-primary)] border-2 border-[var(--color-primary)] hover:bg-[var(--color-primary)] hover:text-white transition-all"
        >
          Daily Poem
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close mobile menu on link click
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
  
  // Close mobile menu on outside click
  document.addEventListener('click', (e) => {
    if (!menuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });
</script>
