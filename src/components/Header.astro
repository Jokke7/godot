---
const pathname = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-background)]/60 backdrop-blur-lg border-b border-[var(--color-surface)]">
  <nav class="container" style="height: var(--header-height);">
    <div class="flex items-center justify-between h-full">
      <!-- Logo -->
      <a 
        href="/" 
        class="hover:opacity-80 transition-opacity duration-[var(--transition-base)] flex items-center"
      >
        <img 
          src="/images/godot_logo.svg" 
          alt="Godot" 
          class="h-10 w-auto"
        />
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a 
          href="/" 
          class:list={[
            "text-base font-medium transition-colors duration-[var(--transition-base)]",
            pathname === "/" 
              ? "text-[var(--color-primary)]" 
              : "text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
          ]}
        >
          Home
        </a>
        <a 
          href="/cv/full" 
          class:list={[
            "text-base font-medium transition-colors duration-[var(--transition-base)]",
            pathname.startsWith("/cv") 
              ? "text-[var(--color-primary)]" 
              : "text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
          ]}
        >
          CV
        </a>
        <a 
          href="/blog" 
          class:list={[
            "text-base font-medium transition-colors duration-[var(--transition-base)]",
            pathname.startsWith("/blog") 
              ? "text-[var(--color-primary)]" 
              : "text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
          ]}
        >
          Blog
        </a>
        <a 
          href="/poem"
          class="vibe-sticker"
          aria-label="Daily Poem"
        >
          <img 
            src="/images/nav_vibe.png" 
            alt="Daily Poem" 
            class="vibe-image"
          />
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 text-[var(--color-text)] hover:text-[var(--color-primary)] transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div 
      id="mobile-menu" 
      class="md:hidden hidden absolute top-full left-0 right-0 bg-[var(--color-surface)] border-b border-[var(--color-surface-elevated)] shadow-xl"
    >
      <div class="container py-4 flex flex-col gap-4">
        <a 
          href="/" 
          class="text-base font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
        >
          Home
        </a>
        <a 
          href="/cv/full" 
          class="text-base font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
        >
          CV
        </a>
        <a 
          href="/blog" 
          class="text-base font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
        >
          Blog
        </a>
        <a 
          href="/poem"
          class="block"
          aria-label="Daily Poem"
        >
          <img 
            src="/images/nav_vibe.png" 
            alt="Daily Poem" 
            class="w-24 mx-auto hover:opacity-80 transition-opacity"
          />
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close mobile menu on link click
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
  
  // Close mobile menu on outside click
  document.addEventListener('click', (e) => {
    if (!menuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });
</script>

<style>
  .vibe-sticker {
    position: relative;
    display: block;
    z-index: 60;
  }

  .vibe-image {
    width: 120px;
    height: auto;
    transform: rotate(-8deg);
    transition: all 0.3s ease;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .vibe-sticker:hover .vibe-image {
    transform: rotate(-8deg) scale(1.1);
    filter: drop-shadow(0 6px 12px rgba(0, 0, 0, 0.4));
  }

  /* Mobile: smaller and less tilted */
  @media (max-width: 768px) {
    .vibe-image {
      width: 80px;
      transform: rotate(-5deg);
    }

    .vibe-sticker:hover .vibe-image {
      transform: rotate(-5deg) scale(1.05);
    }
  }
</style>
